unit UExporta;

interface

type

  TExportacao = class abstract
  public
    Exportar: String;
  end;

  TExportaTexto = class

public class TExportaTexto : TExportacao
{
	public string Texto {get; set;}

	public override string Exportar (Texto) {

		if (Texto == "" || Texto == null)
			console.writeLine("O Texto é vazio");
	}
}

